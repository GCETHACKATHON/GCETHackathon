<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.animator_abhi.gcethackathon.Login.LoginActivity">


    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:text="Register As"
        android:textSize="36dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"

        />

    <Button
        android:id="@+id/buttonInvestors"


        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/boder"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/investor"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="273dp" />


    <Button
        android:id="@+id/buttonStartup"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/boder"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/startup"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="177dp" />

    <Button
        android:id="@+id/buttonStudent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/boder"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/student"

        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="77dp" />
</LinearLayout>
