<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.animator_abhi.gcethackathon.Login.StartupRegister"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/startup_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Startup Name" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/startup_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textMultiLine" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/startup_founder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Founder Name" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/startup_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register Startup" />
</LinearLayout>
